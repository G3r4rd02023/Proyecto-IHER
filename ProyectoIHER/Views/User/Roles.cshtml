
@model ProyectoIHER.ModelViews.UserView

@{
    ViewBag.Title = "Roles";
}

<h2>Roles para el Usuario : @Model.Name</h2>

<p>
    @Html.ActionLink("Agregar Rol", "AddRole", new { userID = Model.UserID }, new { @class = "btn btn-info" })
    @Html.ActionLink("Volver a la Lista", "Index", new { user = Model }, new { @class = "btn btn-primary" })
</p>

<table class="table">

    @for (int i = 0; i < Model.Roles.Count; i++)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => Model.Roles[i].Name)
            </td>

            <td>
                @Html.ActionLink("Eliminar", "Delete", new { userID = Model.UserID, roleID = Model.Roles[i].RoleId })
            </td>
        </tr>
    }

</table>
