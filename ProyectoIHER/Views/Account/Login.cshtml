@using ProyectoIHER.Models
@model LoginViewModel
@{
    Layout = "~/Views/Shared/LayoutParaLogin.cshtml";
    ViewBag.Title = "Iniciar sesión";
    }



<body class="FondoEdificio">
    <div class="LogoLogin">
        <img class="LogoLogin" src="~/Imagenes/logo.png" />
        <p></p>
    </div>
    <div class="row fondotransparenteblanco ContenidoCentro">
        <p></p>

        <section id="loginForm">
            <p></p>
            @using (Html.BeginForm("Login", "Account", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
            {
                @Html.AntiForgeryToken()
                <h4>Iniciar Sesión</h4>
              
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                <div class="form-group">
                 
                    <div class="ContenidoCentro">
                        <input placeholder="Correo"
                        @Html.TextBoxFor(m => m.Email, new { @class = "form-control" })
                        @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger" })
                               
                    </div>
                </div>
                <div class="form-group">
               
                    <div class="ContenidoCentro">
                        <input placeholder="Contraseña"
                        @Html.PasswordFor(m => m.Password, new { @class = "form-control" })
                        @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })
                    </div>
                </div>
            
                <div class="form-group">
                    <div class="ContenidoCentro">
                        <input type="submit" value="Iniciar sesión" class="btn btn-primary BotonEstirado" />
                    </div>
                </div>
                <p class="text-danger">
                    @Html.ActionLink("Registrar como nuevo usuario", "Register")
                </p>
                //Habilite esta opción después de habilitar la confirmación de la cuenta para la función de restablecimiento de contraseña
                <p class="text-danger">
                    @Html.ActionLink("¿Ha olvidado su contraseña?", "ForgotPassword")
                </p>
            }
        </section>


    </div>
</body>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}