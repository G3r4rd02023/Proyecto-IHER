@model ProyectoIHER.Models.RegisterViewModel
@{
    Layout = "~/Views/Shared/LayoutParaLogin.cshtml";
    ViewBag.Title = "Registrarse";
}

    <body class="FondoEdificio">

        @using (Html.BeginForm("Register", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
        {
            @Html.AntiForgeryToken()
            <div class="LogoLogin">
                <img class="LogoLogin" src="~/Imagenes/logo.png" />
                <p></p>
            </div>
            <div class="row fondotransparenteblanco ContenidoCentro">
                <p></p>
                <h4>Registrarse</h4>
                
                @Html.ValidationSummary("", new { @class = "text-danger" })
                <div class="form-group">

                    <div class="ContenidoCentro">
                        <input placeholder="Correo"
                               @Html.TextBoxFor(m => m.Email, new { @class = "form-control" })
                    </div>
                </div>
                <div class="form-group">
                  
                    <div class="ContenidoCentro">
                        <input placeholder="Contraseña"
                               @Html.PasswordFor(m => m.Password, new { @class = "form-control" })
                    </div>
                </div>
                <div class="form-group">
                   
                    <div class="ContenidoCentro">
                        <input placeholder="Confirmar Contraseña"
                               @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control" })
                    </div>
                </div>
                <div class="form-group">
                    <div class="ContenidoCentro">
                        <input type="submit" class="btn btn-primary BotonEstirado" value="Registrarse" />
                    </div>
                </div>




                </div>
                }
            
        </body>
        @section Scripts {
            @Scripts.Render("~/bundles/jqueryval")
        }
